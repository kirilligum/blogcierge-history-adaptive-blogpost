---
import AdminAuthLayout from "../../../layouts/AdminAuthLayout.astro";
---

<AdminAuthLayout title="Admin Setup">
  <h1>Create Admin Account</h1>
  <form action="/api/admin/setup" method="post">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" required />
    <label for="password">New Password</label>
    <input
      type="password"
      id="password"
      name="password"
      required
      minlength="8"
    />
    <button type="submit">Create Account</button>
  </form>
  <p class="info">
    This account will be used to access the admin panel. If you forget your credentials,
    you will need to manually delete the user entry in the KV store to reset it.
  </p>
</AdminAuthLayout>
